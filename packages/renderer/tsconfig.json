{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "/@/*": ["./src/*"]
    },
    "lib": ["ESNext", "dom", "dom.iterable"]
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts",
    "../preload/types/electron-api.d.ts"
  ],

  "plugins": [{ "name": "typescript-plugin-css-modules" }]
}
